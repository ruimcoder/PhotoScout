@using ScoutterSite.Resources

@model ErrorModel

@{
    ViewBag.Title = GlobalRes.UnauthorizedTitle;
    ViewBag.Description = GlobalRes.UnauthorizedDescription;
}

<div class="jumbotron text-center">
    <header>
        <h1><i class="fa fa-ban text-danger"></i> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.RouteUrl(HomeControllerRoute.GetIndex)"><span class="fa fa-home"></span> @GlobalRes.LabelTakeMeHome</a>
</div>